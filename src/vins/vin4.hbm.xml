<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class abstract="true" name="vins.Vin" table="vin">
    <id column="Numero" type="long" name="numero">
      <generator class="increment"/>
         
    </id>
    <property name="nom"/>
    <property name="annee"/>
    <property name="nbBouteilles"/>
    <property name="prix"/>
    <many-to-one  name="producteur" column="ID_Prod" class="vins.Producteur" /> 
    <union-subclass name="vins.VinDeGarde" table="vinDeGarde">
      <property column="NbAnMax" name="nbAnneeMax"/>
      <property column="NbAnMin" name="nbAnneeMin"/>
    </union-subclass>
    <union-subclass name="vins.VinConsommable" table="vinConso">
		</union-subclass>
  </class>
</hibernate-mapping>
